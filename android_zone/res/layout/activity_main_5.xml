<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CustomPagingGirdViewActivity" >

    <com.example.testandroid.circle.CircleProgressBar
        android:id="@+id/progress1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="visible"
        app:mlpb_progress_color="#566da9"
        app:mlpb_progress_stoke_width="3dp" />

    <com.example.testandroid.circle.CircleProgressBar
        android:id="@+id/progress2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:mlpb_progress_stoke_width="5dp"
        app:mlpb_progress_text_visibility="visible" />

    <com.example.testandroid.circle.CircleProgressBar
        android:id="@+id/progressWithArrow"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:mlpb_arrow_height="5dp"
        app:mlpb_arrow_width="10dp"
        app:mlpb_progress_stoke_width="5dp"
        app:mlpb_progress_text_visibility="visible"
        app:mlpb_show_arrow="true" />

    <com.example.testandroid.circle.CircleProgressBar
        android:id="@+id/progressWithoutBg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:mlpb_arrow_height="5dp"
        app:mlpb_arrow_width="10dp"
        app:mlpb_enable_circle_background="false"
        app:mlpb_progress_stoke_width="5dp"
        app:mlpb_progress_text_visibility="visible"
        app:mlpb_show_arrow="true" />

    <com.example.testandroid.circle.CircleProgressBar2
        android:id="@+id/cp2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="2dp"
        android:background="@drawable/shape_round"
        android:src="@drawable/arrow" />

</LinearLayout>